{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-liqpay" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
		<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
			<button type="button" class="close" data-dismiss="alert">&times;</button>
		</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
			</div>
			<div class="panel-body">
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-liqpay" class="form-horizontal">
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
						<div class="col-sm-10">
							<select name="payeer_status" id="input-status" class="form-control">
								{% if payeer_status %}
								<option value="1" selected="selected">{{ text_enabled }}</option>
								<option value="0">{{ text_disabled }}</option>
								{% else %}
								<option value="1">{{ text_enabled }}</option>
								<option value="0" selected="selected">{{ text_disabled }}</option>
								{% endif %}
							</select>
						</div>
					</div>

					<div class="form-group required">
						<label class="col-sm-2 control-label" for="input-url">
							<span data-toggle="tooltip" title="{{ help_url }}">{{ entry_url }}</span>
						</label>
						<div class="col-sm-10">
							<input type="text" name="payeer_url" value="{{ payeer_url }}" id="input-url" class="form-control" />
							{% if error_url %}
								<div class="text-danger">{{ error_url }}</div>
							{% endif %}
						</div>
					</div>
				  
					<div class="form-group required">
						<label class="col-sm-2 control-label" for="input-merchant">
							<span data-toggle="tooltip" title="{{ help_merchant }}">{{ entry_merchant }}</span>
						</label>
						<div class="col-sm-10">
							<input type="text" name="payeer_merchant" value="{{ payeer_merchant }}" id="input-merchant" class="form-control" />
							{% if error_merchant %}
								<div class="text-danger">{{ error_merchant }}</div>
							{% endif %}
						</div>
					</div>
				  
					<div class="form-group required">
						<label class="col-sm-2 control-label" for="input-security">
							<span data-toggle="tooltip" title="{{ help_security }}">{{ entry_security }}</span>
						</label>
						<div class="col-sm-10">
							<input type="text" name="payeer_security" value="{{ payeer_security }}" placeholder="{{ payeer_security }}" id="input-security" class="form-control" />
							{% if error_security %}
								<div class="text-danger">{{ error_security }}</div>
							{% endif %}
						</div>
					</div>
				  
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-log">
							<span data-toggle="tooltip" title="{{ help_log }}">{{ entry_log }}</span>
						</label>
						<div class="col-sm-10">
							<input type="text" name="payeer_log_value" value="{{ payeer_log_value }}" id="input-log" class="form-control" />
						</div>
					</div>
				  
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-list_ip">
							<span data-toggle="tooltip" title="{{ help_list_ip }}">{{ entry_list_ip }}</span>
						</label>
						<div class="col-sm-10">
							<input type="text" name="payeer_list_ip" value="{{ payeer_list_ip }}" id="input-list_ip" class="form-control" />
						</div>
					</div>
					
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-admin_email">
							<span data-toggle="tooltip" title="{{ help_admin_email }}">{{ entry_admin_email }}</span>
						</label>
						<div class="col-sm-10">
							<input type="text" name="payeer_admin_email" value="{{ payeer_admin_email }}" id="input-admin_email" class="form-control" />
						</div>
					</div>
				  
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-order-wait">{{ entry_order_wait }}</label>
						<div class="col-sm-10">
							<select name="payeer_order_wait_id" id="input-order-wait" class="form-control">
							{% for order_status in order_statuses %}
								{% if order_status.order_status_id == payeer_order_wait_id %}
								<option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
								{% else %}
								<option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
								{% endif %}
							{% endfor %}
							</select>
						</div>
					</div>
				  
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-order-success">{{ entry_order_success }}</label>
						<div class="col-sm-10">
							<select name="payeer_order_success_id" id="input-order-success" class="form-control">
							{% for order_status in order_statuses %}
								{% if order_status.order_status_id == payeer_order_success_id %}
									<option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
									{% else %}
									<option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
								{% endif %}
							{% endfor %}
							</select>
						</div>
					</div>
				  
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-order-fail">{{ entry_order_fail }}</label>
						<div class="col-sm-10">
							<select name="payeer_order_fail_id" id="input-order-fail" class="form-control">
							{% for order_status in order_statuses %}
								{% if order_status.order_status_id == payeer_order_fail_id %}
									<option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
									{% else %}
									<option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
								{% endif %}
							{% endfor %}
							</select>
						</div>
					</div>
				  
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
						<div class="col-sm-10">
							<select name="payeer_geo_zone_id" id="input-geo-zone" class="form-control">
								<option value="0">{{ text_all_zones }}</option>
								{% for geo_zone in geo_zones %}
									{% if geo_zone.geo_zone_id == payeer_geo_zone_id %}
										<option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
										{% else %}
										<option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
									{% endif %}
								{% endfor %}
							</select>
						</div>
					</div>
				  
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
						<div class="col-sm-10">
							<input type="text" name="payeer_sort_order" value="{{ payeer_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
{{ footer }}